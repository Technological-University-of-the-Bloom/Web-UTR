---
const { label, borderColor } = Astro.props; // El prop 'label' pasará el texto de cada botón
---

<style>
  .buttons {
    display: flex;
    flex-direction: column;
    gap: 20px; /* Separación de 20px entre cada botón */
    align-items: center; /* Centra los botones horizontalmente */
  }

  button {
    background-color: transparent;
    border: 2px solid; /* Se eliminará el color de borde predeterminado */
    color: rgb(255, 255, 255); /* Texto en blanco como predeterminado */
    padding: 0.75rem;
    cursor: pointer;
    border-radius: 0 0 0 20px; /* Esquina inferior izquierda redondeada */
    transition: background-color 0.3s ease;
    width: 349px; /* Ancho máximo del botón */
    height: 81px; /* Altura fija */
    font-family: "Barlow", sans-serif; /* Aplicamos la fuente Barlow */
    display: flex; /* Usar flexbox para centrar el contenido */
    justify-content: center; /* Centrar horizontalmente el contenido */
    align-items: center; /* Centrar verticalmente el contenido */
  }

  span {
    font-family: "Barlow", sans-serif; /* Aplicamos la fuente Barlow */
    font-size: 2.1rem; /* Ajusta el tamaño de la fuente aquí */
    width: auto; /* El ancho se ajustará al contenido */
    height: auto; /* La altura se ajustará al contenido */
    text-align: center; /* Centrar el texto */
  }

  button:hover {
    background-color: white; /* Cambia a blanco al pasar el mouse */
    color: #e12030; /* Texto rojo al hacer hover */
  }
</style>

<div class="buttons">
  <button style={`border-color: ${borderColor}; color: ${borderColor};`}>
    <span>{label}</span>
  </button>
  <!-- Puedes agregar más botones aquí como desees -->
</div>
