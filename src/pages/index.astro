---
import HomeMobile from "../layouts/Mobile/Home.astro";
import HomeDesktop from "../layouts/Desktop/Home.astro";
import "../styles/global.css";

import Carousel from "../components/Carousel.astro";
import HeadText from "../components/HeadText.astro";
import Video from "../components/Video.astro";
import ParagraphBody from "../components/ParagraphBody.astro";
import UnivesityData from "../components/UnivesityData.astro";
import News from "../components/News.astro";
import Button from "../components/Button.astro";
import "@fortawesome/fontawesome-svg-core/styles.css";
import { config } from "@fortawesome/fontawesome-svg-core";
config.autoAddCss = false;
---

<link rel="icon" href="/favicon.ico" sizes="any" />
<link rel="icon" href="/icon.svg" type="image/svg+xml" />
<link rel="apple-touch-icon" href="/apple-touch-icon.png" />
<link rel="manifest" href="/manifest.webmanifest" />
<div class="mobile">
  <HomeMobile title="Home | UTR">
    <main>
      <div class="b-100"></div>
      <HeadText
        firstLine="TO GROW"
        secondLine="YOU’VE FOUND THE PLACE THAT ALLOWS YOU"
        img="https://utr.edu.mx/pages/nosotros/imagenes_nosotros/students_utr.jpg"
      />
      <div style="display: flex; flex-direction: column; gap:16px">
        <ParagraphBody
          textColor="black"
          content="Universidad Tecnológica El Retoño is a new alternative for higher education. At UTR, we believe in your potential to transform, innovate, and thrive."
        />
        <ParagraphBody
          textColor="black"
          content="Our commitment to education empowers you to break boundaries, discover your passions, and create a future full of possibilities. Together, we grow, learn, and shape tomorrow."
        />
      </div>
      <Carousel />
      <Video />
      <ParagraphBody
        textColor="black"
        content="We empower students and businesses with immersive technologies to lead in Industry 4.0. Our state-of-the-art space provides virtual reality experiences, simulations, and cutting-edge tools like CAD, AI, and game development, preparing you to innovate boldly and succeed in the future."
      />

      <div class="borderblack">
        <Button
          label="EXPLORE OUR PROGRAMS"
          borderColor="black"
          style="font-size: 50px;"
        />
      </div>

      <UnivesityData />
      <HeadText
        firstLine="PROUD PARTNERS"
        secondLine="OUR"
        img="https://www.svgrepo.com/show/508699/landscape-placeholder.svg"
      />
      <Carousel />
      <HeadText
        firstLine="NEWS"
        img="https://www.svgrepo.com/show/508699/landscape-placeholder.svg"
      />
      <News />

      <div class="button-container">
        <div class="step">
          <p
            class="pre-button-text"
            style="color: #000000; margin: 30px 0 0 0;"
          >
            TAKE THE
          </p>
          <p
            class="pre-button-text"
            style="color: #ffffff; margin: 0 0 50px 0;"
          >
            NEXT STEP
          </p>
        </div>
        <div class="buttons">
          <Button label="REQUEST INFO" />
          <Button label="VISIT" />
          <Button label="APPLY NOW" />
        </div>
      </div>

      <!-- Nueva sección con contenedor personalizado -->
      <div class="container">
        <!-- Footer del contenido -->
        <!-- Título principal -->
        <p class="bottom-legals">
          Notice of Nondiscriminatory Policy
        </p>
        <!-- Contenido del aviso -->
        <p class="bottom-legals">
          Universidad Tecnológica El Retoño admits students of any race, color,
          national and ethnic origin to all the rights, privileges, programs,
          and activities generally accorded or made available to students at the
          school. It does not discriminate on the basis of race, color, national
          and ethnic origin in administration of its educational policies,
          admissions policies, scholarship and loan programs, and athletic and
          other school-administered programs.
        </p>
        <p class="bottom-legals">Universidad Tecnológica El Retoño</p>
        <p class="bottom-legals">
          Carretera a San Luis Potosí km. 68 Comunidad El Retoño 20337, El
          Retoño, Aguascalientes.
        </p>
        <p class="bottom-legals">449 7860 984</p>
        <p class="bottom-legals">contacto@utr.edu.mx</p>
        <p
          style="color: #808080; font-size:18px; padding: 30px 0 0px 0"
        >
          Universidad Tecnológica El Retoño ©2024
        </p>
      </div>
    </main>
  </HomeMobile>
</div>

<div class="desktop">
  <HomeDesktop title="Home | UTR">
    <main>
      <div
        style="display: flex; justify-content: center; align-items: center; height: 100vh; text-align: center;"
      >
        <p style="font-family: 'Barlow', sans-serif; font-weight: 700;">
          Under construction
        </p>
      </div>
    </main>
  </HomeDesktop>
</div>

<style>
  main {
    display: flex;
    flex-direction: column;
    gap: 50px; /* Espaciado de 50px entre componentes */
  }

  .bottom-legals {
    color: var(--off-white);
  }

  .pre-button-text {
    font-family: "Barlow", sans-serif;
    font-size: 3.5rem;
    margin: 0;
    padding: 0;
  }

  .button-container {
    display: flex;
    flex-direction: column;
    background-color: #e12030;
    padding: 20px;
    color: #e6e6e6;
    width: 100%; /* Adjust width */
    height: 64vh;
  }

  .buttons {
    display: flex;
    flex-direction: column;
    gap: 20px; /* Espaciado de 30px entre los botones */
    align-items: center; /* Centra los botones horizontalmente */
  }
  .footer-info {
    display: flex;
    flex-direction: column;
    gap: 50px; /* Espaciado de 50px entre los párrafos */
    align-items: center; /* Centra el contenido horizontalmente */
  }
  .container {
    width: 100%;
    height: 956px;
    margin: 0 auto; /* Centrar el contenedor horizontalmente */
    background-color: #000000; /* Fondo negro */
    border: 1px solid #000000; /* Borde opcional para ver el contenedor */
    padding: 20px;
    display: flex;
    flex-direction: column;
    gap: 20px; /* Espaciado de 50px entre los elementos dentro del contenedor */
  }

  h2 {
    color: #ffffff; /* Asegurar que el h2 sea blanco */
  }
</style>
